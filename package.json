{
  "name": "multiwordle",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "lint": "next lint",
    "test:load": "node tests/load-test.js",
    "test:load:10": "NUM_PLAYERS=10 DURATION=30000 node tests/load-test.js",
    "test:load:50": "NUM_PLAYERS=50 DELAY=50 DURATION=45000 node tests/load-test.js",
    "test:load:80": "NUM_PLAYERS=80 DELAY=50 DURATION=60000 node tests/load-test.js",
    "test:load:100": "NUM_PLAYERS=100 DELAY=100 DURATION=60000 node tests/load-test.js",
    "test:load:prod": "SERVER_URL=https://multiwordle.onrender.com NUM_PLAYERS=100 DELAY=100 DURATION=90000 node tests/load-test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:live": "ROOM_ID=salajogo NUM_PLAYERS=50 node tests/live-room-test.js",
    "test:live:prod": "SERVER_URL=https://multiwordle.onrender.com ROOM_ID=salajogo NUM_PLAYERS=50 node tests/live-room-test.js"
  },
  "dependencies": {
    "next": "15.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.19.24",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "15.0.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5"
  }
}
